    flex-direction: column;
}
.search-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
}
.search-container * {
    z-index: 10;
}
.search-container h1 {
