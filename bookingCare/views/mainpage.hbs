}
.search-container .search button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 15px;
    background: none;
    border: none;
    font-size: 30px;
    cursor: pointer;
    color: #666;
}
.search-container .search button:active {
    transform: scale(1.1) translateY(-50%);
}
.search-container .search input {
    width: 100%;
    height: 100%;
    background:  #F8ED3B;
